.contact-us
    &__container
        width: 90%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    &__title
        width: 100%
        text-align: start;
        color: #ff3946;
        font-weight: 600;
        font-size: 1rem;
        margin: 4rem 0 0 0;
    &__header
        width: 100%;
        color: #314584;
        text-align: start;
        font-size: 2.5rem;
        font-weight: 600;
    &__form
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    &__user-data
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin-bottom: 1rem;
        & input
            width: 49%;
            background-color: #f4fafe;
            border: none;
            padding: 1.5rem 1rem 2rem 1rem;
            color: #314584;
    &__message
        width: 100%;
    &__textarea
        width: 100%;
        margin-bottom: 3rem;
        & textarea
            width: 100%;
            background-color: #f4fafe;
            border: none;
            padding: 1.5rem 1rem 2rem 1rem;
            color: #314584;
            resize: none;
    &__submit-button
        padding: 1rem 2rem;
        border-radius: 25px;
        filter: drop-shadow(0px 5px 5px rgba(255,57,70,0.15));
        background-color: #ff3946;
        color: #fff;
        line-height: 1.5;
        font-size: 1rem;
        font-weight: 600;
        outline: none;
        border: none;