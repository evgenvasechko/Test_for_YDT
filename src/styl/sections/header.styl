.header
    position: relative;
    height: 4rem;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    &__container
        position: relative;
        width: 100%;
        max-width: 1280px;
        display: flex;
        justify-content: flex-end;
    &-logo
        position: absolute;
        top: 1rem;
        left: 1rem;
    &-burger
        margin-right: 1rem;
        font-size: 2rem;
    &-menu
        list-style: none;
        font-size: 1.8rem;
        &__unit
            padding: 1rem;
            a
                color: #314584;
        &_mobile
            display: none
            position: absolute
            width: 100%;
            margin: 0;
            padding: 0;
            text-align: center;
            top: 4rem;
            background: #fff;
            z-index: 3;

    &-contact-button
        display: none
    & .show
        display: block;
            