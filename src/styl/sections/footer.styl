.footer
    margin-top: 5rem;
    &__container
        background-color: #314584;
        color: #ffffff;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-weight: 600;
        padding: 4rem 0 4rem 0;
    &__header
        font-weight: 500;
        color: #ff3946;
    &-menu
        list-style: none;
        display: flex;
        padding: 0;
        font-size: 1rem;
        margin: 0 0 2rem 0;
        &__link a
            color: #ffffff;
            margin: 1rem;
    &__license
        font-weight: 300;
        margin-bottom: 2rem;
        font-size: 0.8rem;
    &__social-networks a
        color: #ffffff;
        font-size: 2rem;
        margin: 0 2rem 0 2rem;