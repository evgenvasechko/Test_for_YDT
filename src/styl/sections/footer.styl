.footer
    margin-top: 5rem;
    @media screen and (min-width 767px)
        margin-top: 0;
    &__container
        background-color: #314584;
        color: #ffffff;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-weight: 600;
        padding: 4rem 0 4rem 0;
    &__logo
        @media screen and (min-width 767px)
            font-size: 1.6rem;
    &__header
        font-weight: 500;
        color: #ff3946;
        @media screen and (min-width 767px)
            font-size: 4rem;
            margin-top: 1rem;
    &-menu
        list-style: none;
        display: flex;
        padding: 0;
        font-size: 1rem;
        flex-direction: row;
        justify-content: space-between;
        width: 70%;
        max-width: 480px;
        @media screen and (min-width 767px)
            font-size: 1.6rem;
            margin-bottom: 5rem;
        &__link a
            color: #ffffff;
            margin: 1rem;
    &__license
        font-weight: 300;
        margin-bottom: 2rem;
        font-size: 0.8rem;
        @media screen and (min-width 767px)
            font-size: 1.2rem;
            margin-bottom: 3rem;
    &__social-networks a
        color: #ffffff;
        font-size: 2rem;
        margin: 0 2.5rem;
        @media screen and (min-width 767px)
            font-size: 4rem;