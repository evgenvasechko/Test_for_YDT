.hero
    &__container
        width: 90%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 5rem;
    &-text
        &__title
            font-size: 4rem;
            color: #314584;
            font-weight: 600;
        &__description
            font-size: 1rem;
            color: #6e757a;
            line-height: 1.5;
            margin-bottom: 3rem
        &__links
            margin-bottom: 3rem;
        &__link
            color: #314584;
            line-height: 1.5;
            font-size: 1rem;
            font-weight: 600;
            margin-right: 2rem;
        &__link.active
            padding: 1rem 2rem;
            border-radius: 25px;
            filter: drop-shadow(0px 5px 5px rgba(255,57,70,0.15));
            background-color: #ff3946;
            color: #fff;
            line-height: 1.5;
            font-size: 1rem;
            font-weight: 600;
            margin-right: 2rem;
    &__image
        img
            width: 100%;
            position: relative;
            right: -2rem;